<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:elevation="8dp"
        android:layout_centerInParent="true"
        android:layout_width="280dp"
        app:cardCornerRadius="8dp"
        android:layout_height="400dp">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnExit"
                android:background="@drawable/exit"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_width="27dp"
                android:layout_height="25dp" />

            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/txtPrivacy"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="Privacy and Agreement"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/txtPrivacy"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="20dp"
                    android:id="@+id/txtAgree"
                    android:text="@string/privacyandagreeement"
                    android:typeface="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="20dp"
                    android:text="@string/privacyandagreeement1"
                    android:typeface="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="20dp"
                    android:text="@string/privacyandagreeement2"
                    android:typeface="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginBottom="20dp"
                    android:text="@string/privacyandagreeement3"
                    android:typeface="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="@string/privacyandagreeement4"
                    android:typeface="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAccept"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/linearLayout"
                android:typeface="serif"
                android:text="I AGREE"
                android:layout_marginBottom="10dp"
                android:layout_centerInParent="true"
                style="@style/ButtonBorder.AccentBlack1"
                android:layout_width="240dp"
                android:layout_height="40dp" />
        </RelativeLayout>

    </ScrollView>
    </android.support.v7.widget.CardView>

</RelativeLayout>