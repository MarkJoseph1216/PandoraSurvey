<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_centerInParent="true"
    android:layout_marginRight="5dp"
    android:layout_gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_centerInParent="true"
        android:id="@+id/cardView">
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:id="@+id/inputLayout1"
                android:layout_width="510dp"
                android:layout_height="wrap_content">

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:id="@+id/txtTitle"
                android:typeface="serif"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:text="Other Social Media Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <ImageButton
                android:layout_gravity="end"
                android:layout_marginLeft="360dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:id="@+id/btnExit"
                android:layout_marginTop="8dp"
                android:background="@drawable/exit"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/inputLayout2"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/inputLayout1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:id="@+id/imgReason"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_more_horiz_black_24dp"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            
            <TextView
                android:id="@+id/txtOthers"
                android:textStyle="bold"
                android:layout_marginTop="16sp"
                android:textSize="24sp"
                android:layout_toRightOf="@+id/imgReason"
                android:typeface="serif"
                android:text="Account:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <android.support.design.widget.TextInputLayout
            android:theme="@style/TextInputLayoutAppearance"
            android:id="@+id/inputLayout"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_width="305dp"
            android:layout_height="wrap_content">
            
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edtOthers"
                android:typeface="serif"
                android:imeOptions="actionDone"
                android:fontFamily="serif"
                android:digits="0123456789,space,qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                android:inputType="textCapWords|text"
                android:textColorHint="@color/whiteGray"
                android:hint="Write here your account"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnSubmitReason"
                android:textStyle="bold"
                android:typeface="serif"
                android:text="Submit "
                android:textColor="@color/black"
                android:background="@drawable/btn_outlineblack1"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/inputLayout2"
                android:layout_width="480dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>