<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_centerInParent="true"
        android:layout_margin="70dp"
        android:layout_width="440dp"
        android:layout_height="210dp">

        <RelativeLayout
            android:background="@drawable/lucernebg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@color/whiteGray"
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:textSize="18dp"
                    android:typeface="serif"
                    android:layout_marginLeft="120dp"
                    android:layout_centerInParent="true"
                    android:text="SETTINGS - SETUP"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:layout_below="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/imgKey"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/branches"
                    android:layout_width="60dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/txtPassword"
                    android:layout_toRightOf="@+id/imgKey"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="23dp"
                    android:typeface="serif"
                    android:text="Branch:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />4

                <Spinner
                    android:id="@+id/chooseBranches"
                    android:layout_width="250dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/txtPassword"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp">
                </Spinner>

            </RelativeLayout>

            <Button
                android:id="@+id/btnCancel"
                android:textColor="@color/white"
                android:background="@color/skyRed"
                android:text="CANCEL"
                android:layout_below="@+id/layout2"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_below="@+id/layout2"
                android:layout_toRightOf="@+id/btnCancel"
                android:id="@+id/btnEnter"
                android:textColor="@color/white"
                android:background="@color/green"
                android:layout_marginLeft="20dp"
                android:text="ENTER"
                android:layout_marginBottom="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>