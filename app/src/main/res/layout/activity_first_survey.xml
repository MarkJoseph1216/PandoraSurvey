<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.privateex.pandorasurvey.FirstSurvey">

    <android.support.v7.widget.CardView
        android:elevation="8dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/black"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:background="@color/white"
                android:layout_margin="10dp"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/imgLucerne"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:background="@drawable/pandoralogowhite"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp" />

                <LinearLayout
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="35dp"
                    android:id="@+id/layout"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/inputMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:visibility="visible"
                        android:id="@+id/imgName"
                        android:background="@drawable/ic_person_black_24dp"
                        android:layout_width="60dp"
                        android:layout_height="65dp" />

                    <CheckBox
                        android:layout_marginTop="10dp"
                        android:id="@+id/chckMs"
                    android:textSize="27dp"
                    android:layout_gravity="center"
                    android:typeface="serif"
                    android:text="Ms."
                        android:buttonTint="@color/checkbox_filter_tint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"/>

                    <CheckBox
                        android:layout_marginTop="10dp"
                        android:id="@+id/chckMrs"
                        android:textSize="27dp"
                        android:layout_gravity="center"
                        android:typeface="serif"
                        android:text="Mrs."
                        android:buttonTint="@color/checkbox_filter_tint"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:layout_marginTop="10dp"
                        android:id="@+id/chckMr"
                        android:textSize="27dp"
                        android:layout_gravity="center"
                        android:typeface="serif"
                        android:buttonTint="@color/checkbox_filter_tint"
                        android:text="Mr."
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TextInputLayout
                        android:theme="@style/TextInputLayoutAppearance"
                        android:visibility="visible"
                        android:id="@+id/inputFirst"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edtFirstName"
                            android:typeface="serif"
                            android:hint="First"
                            android:singleLine="true"
                            android:textSize="25sp"
                            android:digits="0123456789,qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                            android:inputType="textCapWords|text"
                            android:imeOptions="actionDone"
                            android:backgroundTint="@color/black"
                            android:textColorHint="@color/whiteGray"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <android.support.design.widget.TextInputLayout
                        android:theme="@style/TextInputLayoutAppearance"
                        android:visibility="visible"
                        android:id="@+id/inputLast"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edtLastName"
                            android:typeface="serif"
                            android:imeOptions="actionDone"
                            android:textSize="25sp"
                            android:singleLine="true"
                            android:digits="0123456789,qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                            android:inputType="textCapWords|text"
                            android:textColorHint="@color/whiteGray"
                            android:backgroundTint="@color/black"
                            android:hint="Last"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/imgEmail"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_email_black_24dp"
                    android:layout_below="@+id/layout"
                    android:layout_width="60dp"
                    android:layout_height="55dp" />

                <android.support.design.widget.TextInputLayout
                    android:theme="@style/TextInputLayoutAppearance"
                    android:visibility="visible"
                    android:id="@+id/inputEmail"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_below="@+id/layout"
                    android:layout_toRightOf="@+id/imgEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtEmail"
                        android:typeface="serif"
                        android:textSize="25sp"
                        android:textColorHint="@color/whiteGray"
                        android:backgroundTint="@color/black"
                        android:hint="Email"
                        android:digits="0123456789@.,qwertzuiopasdfghjklyxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:singleLine="true"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionDone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/imgPhone"
                    android:background="@drawable/ic_phone_black_24dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="70dp"
                    android:layout_width="60dp"
                    android:layout_below="@+id/imgLucerne"
                    android:layout_height="55dp"/>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_marginLeft="20.5dp"
                    android:layout_marginTop="80dp"
                    android:layout_below="@+id/imgLucerne"
                    android:layout_toRightOf="@+id/imgPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/countryCodePicker"
                    app:ccp_defaultNameCode="PH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                </android.support.v7.widget.CardView>

                <android.support.design.widget.TextInputLayout
                    android:theme="@style/TextInputLayoutAppearance"
                    android:visibility="visible"
                    android:id="@+id/inputMobile"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="65dp"
                    android:layout_below="@+id/imgLucerne"
                    android:layout_toRightOf="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edtMobile"
                        android:typeface="serif"
                        android:textSize="25sp"
                        android:textColorHint="@color/whiteGray"
                        android:backgroundTint="@color/black"
                        android:hint="Mobile Number"
                        android:singleLine="true"
                        android:maxLength="12"
                        android:layout_width="match_parent"
                        android:inputType="phone|number"
                        android:imeOptions="actionDone"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:visibility="visible"
                    android:background="@drawable/ic_perm_contact_calendar_black_24dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="35dp"
                    android:id="@+id/imgBirth"
                    android:layout_below="@+id/imgEmail"
                    android:layout_width="60dp"
                    android:layout_height="65dp" />

                <android.support.design.widget.TextInputLayout
                    android:theme="@style/TextInputLayoutAppearance"
                    android:visibility="visible"
                    android:id="@+id/inputDate"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/inputEmail"
                    android:layout_toRightOf="@+id/imgBirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="35dp">

                    <android.support.design.widget.TextInputEditText
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:id="@+id/edtBirthDate"
                        android:typeface="serif"
                        android:clickable="true"
                        android:editable="false"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:textSize="25sp"
                        android:textColor="@color/whiteGray"
                        android:textColorHint="@color/whiteGray"
                        android:backgroundTint="@color/black"
                        android:hint="Click here to pick a Birth Date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btnSubmit"
                    style="@style/ButtonBorder.AccentBlack"
                    android:textStyle="bold"
                    android:typeface="serif"
                    android:text="SUBMIT INFORMATION"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        style="@style/ButtonBorder.AccentBlack"
        android:id="@+id/imgLucerne1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logopandora"
        android:background="@color/white"
        android:layout_width="280dp"
        android:layout_height="115dp"/>

</RelativeLayout>
